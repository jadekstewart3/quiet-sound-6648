<h1><%= @doctor.name %></h1>
<h2> Specialty: </h2> <p><%= @doctor.specialty %></p>
<h2> University: </h2> <p><%= @doctor.university %></p>
<h2> Hospital: </h2> <p><%= @doctor.hospital.name %></p>

<h1>Patients:</h1>
<% @doctor.patients.each do |patient| %>
 <li patient_id="<%= patient.id %>"> <%= patient.name %>  <%=button_to "Remove Patient", doctor_patient_path(@doctor, patient), method: :delete%></li>
 <br>
<% end %>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

